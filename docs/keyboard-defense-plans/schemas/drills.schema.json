{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DrillsFile",
  "type": "object",
  "required": ["templates"],
  "properties": {
    "templates": {
      "type": "array",
      "minItems": 1,
      "items": {"$ref": "#/$defs/template"}
    }
  },
  "$defs": {
    "template": {
      "type": "object",
      "required": ["id", "label", "plan"],
      "properties": {
        "id": {"type": "string", "pattern": "^[a-z0-9-]+$"},
        "label": {"type": "string"},
        "plan": {
          "type": "array",
          "minItems": 1,
          "items": {"$ref": "#/$defs/step"}
        }
      },
      "additionalProperties": false
    },
    "step": {
      "type": "object",
      "required": ["mode", "label"],
      "properties": {
        "mode": {"type": "string", "enum": ["lesson", "targets", "intermission"]},
        "label": {"type": "string"},
        "word_count": {"type": "integer", "minimum": 1},
        "shuffle": {"type": "boolean"},
        "hint": {"type": "string"},
        "targets": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"}
        },
        "duration": {"type": "number", "exclusiveMinimum": 0},
        "message": {"type": "string"},
        "case_sensitive": {"type": "boolean"},
        "allow_spaces": {"type": "boolean"},
        "allowed_chars": {"type": "string"}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
