{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Music Presets",
  "type": "object",
  "properties": {
    "day": {
      "$ref": "#/$defs/mode"
    },
    "night": {
      "$ref": "#/$defs/mode"
    }
  },
  "required": [
    "day",
    "night"
  ],
  "$defs": {
    "mode": {
      "type": "object",
      "properties": {
        "tempo": {
          "type": "number",
          "minimum": 30,
          "maximum": 220
        },
        "scale": {
          "type": "string"
        },
        "chords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "bars": {
          "type": "integer",
          "minimum": 1,
          "maximum": 64
        },
        "instruments": {
          "type": "object"
        }
      },
      "required": [
        "tempo",
        "scale",
        "chords",
        "bars",
        "instruments"
      ]
    }
  }
}
