{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://keyboard-defense.local/schemas/event.schema.json",
  "title": "Keyboard Defense Event",
  "type": "object",
  "required": [
    "id",
    "title",
    "body",
    "tier",
    "tags",
    "choices"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 3
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "body": {
      "type": "string",
      "minLength": 1
    },
    "tier": {
      "type": "integer",
      "minimum": 0,
      "maximum": 5
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "cooldown_days": {
      "type": "integer",
      "minimum": 0
    },
    "choices": {
      "type": "array",
      "minItems": 1,
      "maxItems": 4,
      "items": {
        "type": "object",
        "required": [
          "id",
          "label",
          "input",
          "effects"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 8
          },
          "label": {
            "type": "string",
            "minLength": 1
          },
          "input": {
            "type": "object",
            "required": [
              "mode"
            ],
            "properties": {
              "mode": {
                "enum": [
                  "code",
                  "phrase",
                  "prompt_burst",
                  "command"
                ]
              },
              "text": {
                "type": "string"
              },
              "prompts": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "minItems": 1,
                "maxItems": 3
              }
            },
            "additionalProperties": false
          },
          "effects": {
            "type": "array",
            "items": {
              "type": "object"
            },
            "minItems": 0
          },
          "fail_effects": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "next_event_id": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
