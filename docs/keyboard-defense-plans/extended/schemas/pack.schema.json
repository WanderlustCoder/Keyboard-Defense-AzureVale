{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://keyboard-defense.local/schemas/pack.schema.json",
  "title": "Keyboard Defense Content Pack",
  "type": "object",
  "required": [
    "id",
    "name",
    "version",
    "min_game_version",
    "content"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 3
    },
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "min_game_version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "content": {
      "type": "object",
      "properties": {
        "wordpacks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "events": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "pois": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "threats": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
