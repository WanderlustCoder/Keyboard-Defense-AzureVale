{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://keyboard-defense.local/schemas/pixel_lab_manifest.schema.json",
  "title": "Keyboard Defense Pixel Lab Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "generated_utc",
    "assets"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "generated_utc": {
      "type": "string",
      "format": "date-time"
    },
    "assets": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/asset"
      }
    }
  },
  "$defs": {
    "asset": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "category",
        "source",
        "output",
        "constraints"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$"
        },
        "category": {
          "type": "string",
          "enum": [
            "icons",
            "sprites",
            "portraits",
            "tiles",
            "effects",
            "ui"
          ]
        },
        "source": {
          "$ref": "#/$defs/source"
        },
        "output": {
          "$ref": "#/$defs/output"
        },
        "constraints": {
          "$ref": "#/$defs/constraints"
        },
        "animation": {
          "$ref": "#/$defs/animation"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]+$"
          }
        }
      }
    },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "provider",
        "artifact_type",
        "artifact_id",
        "exported_utc"
      ],
      "properties": {
        "provider": {
          "type": "string",
          "enum": [
            "pixellab",
            "procedural",
            "manual"
          ]
        },
        "artifact_type": {
          "type": "string",
          "enum": [
            "character",
            "animation",
            "isometric_tile",
            "map_object",
            "topdown_tileset",
            "sidescroller_tileset",
            "other"
          ]
        },
        "artifact_id": {
          "type": "string",
          "minLength": 1
        },
        "exported_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "output": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "relative_path",
        "width",
        "height"
      ],
      "properties": {
        "relative_path": {
          "type": "string",
          "pattern": "^(?!res://)(?!/)(?![A-Za-z]:)(?!\\\\\\\\).+\\.png$"
        },
        "width": {
          "type": "integer",
          "minimum": 1
        },
        "height": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "max_kb",
        "pixel_art",
        "alpha_required"
      ],
      "properties": {
        "max_kb": {
          "type": "integer",
          "minimum": 1
        },
        "pixel_art": {
          "type": "boolean"
        },
        "alpha_required": {
          "type": "boolean"
        }
      }
    },
    "animation": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "layout",
        "clips"
      ],
      "properties": {
        "layout": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "frame_width",
            "frame_height",
            "rows"
          ],
          "properties": {
            "frame_width": {
              "type": "integer",
              "minimum": 1
            },
            "frame_height": {
              "type": "integer",
              "minimum": 1
            },
            "rows": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        "clips": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "name",
              "row",
              "start_frame",
              "frames",
              "frame_ms",
              "loop"
            ],
            "properties": {
              "name": {
                "type": "string",
                "pattern": "^[a-z0-9_]+$"
              },
              "row": {
                "type": "integer",
                "minimum": 0
              },
              "start_frame": {
                "type": "integer",
                "minimum": 0
              },
              "frames": {
                "type": "integer",
                "minimum": 1
              },
              "frame_ms": {
                "type": "integer",
                "minimum": 1
              },
              "loop": {
                "type": "boolean"
              }
            }
          }
        }
      }
    }
  }
}
