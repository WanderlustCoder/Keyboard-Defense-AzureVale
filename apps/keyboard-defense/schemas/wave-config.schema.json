{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WaveConfig",
  "type": "object",
  "required": ["waves"],
  "additionalProperties": false,
  "properties": {
    "featureToggles": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "dynamicSpawns": { "type": "boolean" },
        "eliteAffixes": { "type": "boolean" },
        "evacuationEvents": { "type": "boolean" },
        "bossMechanics": { "type": "boolean" }
      }
    },
    "enemyTiers": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "uniqueItems": true
    },
    "turretSlots": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "lane", "unlockWave"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "lane": { "type": "integer", "minimum": 0 },
          "unlockWave": { "type": "integer", "minimum": 0 }
        }
      }
    },
    "waves": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/definitions/wave" }
    }
  },
  "definitions": {
    "spawn": {
      "type": "object",
      "required": ["at", "lane", "tierId", "count", "cadence"],
      "additionalProperties": false,
      "properties": {
        "at": { "type": "number", "minimum": 0 },
        "lane": { "type": "integer", "minimum": 0 },
        "tierId": { "type": "string", "minLength": 1 },
        "count": { "type": "integer", "minimum": 1 },
        "cadence": { "type": "number", "minimum": 0 },
        "shield": { "type": "number", "minimum": 0 },
        "taunt": { "type": "string" },
        "affixes": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true
        }
      }
    },
    "hazard": {
      "type": "object",
      "required": ["kind", "lane", "time", "duration"],
      "additionalProperties": false,
      "properties": {
        "kind": { "type": "string", "enum": ["fog", "storm"] },
        "lane": { "type": "integer", "minimum": 0 },
        "time": { "type": "number", "minimum": 0 },
        "duration": { "type": "number", "minimum": 0 },
        "fireRateMultiplier": { "type": "number", "exclusiveMinimum": 0, "maximum": 1 }
      }
    },
    "dynamicEvent": {
      "type": "object",
      "required": ["kind", "lane", "time"],
      "additionalProperties": false,
      "properties": {
        "kind": { "type": "string", "enum": ["skirmish", "gold-runner", "shield-carrier"] },
        "lane": { "type": "integer", "minimum": 0 },
        "time": { "type": "number", "minimum": 0 },
        "tierId": { "type": "string" },
        "shield": { "type": "number", "minimum": 0 },
        "order": { "type": "integer", "minimum": 0 }
      }
    },
    "evacuation": {
      "type": "object",
      "required": ["time", "lane", "duration"],
      "additionalProperties": false,
      "properties": {
        "time": { "type": "number", "minimum": 0 },
        "lane": { "type": "integer", "minimum": 0 },
        "duration": { "type": "number", "minimum": 1 },
        "word": { "type": "string", "minLength": 4 }
      }
    },
    "wave": {
      "type": "object",
      "required": ["id", "duration", "rewardBonus", "spawns"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "duration": { "type": "number", "minimum": 1 },
        "rewardBonus": { "type": "number" },
        "spawns": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/definitions/spawn" }
        },
        "hazards": {
          "type": "array",
          "items": { "$ref": "#/definitions/hazard" }
        },
        "dynamicEvents": {
          "type": "array",
          "items": { "$ref": "#/definitions/dynamicEvent" }
        },
        "evacuation": { "$ref": "#/definitions/evacuation" },
        "boss": { "type": "boolean" }
      }
    }
  }
}
