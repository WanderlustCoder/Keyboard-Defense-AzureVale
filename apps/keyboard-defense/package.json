{
  "name": "keyboard-defense",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint \"src\" \"tests\" \"scripts\" --ext .ts,.js,.mjs",
    "format": "prettier --write \"src/**/*.{ts,js}\" \"tests/**/*.js\" \"scripts/**/*.mjs\" \"public/index.html\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\" \"tests/**/*.js\" \"scripts/**/*.mjs\" \"public/index.html\"",
    "codex:validate-pack": "node ./scripts/validateCodexPack.mjs",
    "codex:status": "node ./scripts/printCodexStatus.mjs",
    "codex:validate-links": "node ./scripts/validateStatusLinks.mjs",
    "codex:next": "node ./scripts/codexNextTask.mjs",
    "codex:dashboard": "node ./scripts/generateCodexDashboard.mjs",
    "start": "node ./scripts/devServer.mjs start",
    "serve:check": "node ./scripts/devServer.mjs check",
    "serve:status": "node ./scripts/devServer.mjs status",
    "serve:stop": "node ./scripts/devServer.mjs stop",
    "serve:logs": "node ./scripts/devServer.mjs logs",
    "serve:monitor": "node ./scripts/devServer.mjs monitor",
    "serve:smoke": "node ./scripts/devServerSmoke.mjs",
    "monitor:dev": "node ./scripts/devMonitor.mjs --wait-ready --artifact monitor-artifacts/dev-monitor.json",
    "start:monitored": "node ./scripts/startMonitored.mjs",
    "smoke:tutorial:full": "node ./scripts/smokeTutorialFull.mjs",
    "smoke:campaign": "node ./scripts/tutorialSmoke.mjs --mode campaign",
    "analytics:aggregate": "node ./scripts/analyticsAggregate.mjs",
    "analytics:leaderboard": "node ./scripts/analyticsLeaderboard.mjs",
    "analytics:passives": "node ./scripts/passiveTimeline.mjs",
    "analytics:gold": "node ./scripts/goldTimeline.mjs",
    "analytics:gold:summary": "node ./scripts/goldSummary.mjs",
    "analytics:gold:check": "node ./scripts/goldSummaryCheck.mjs",
    "analytics:gold:report": "node ./scripts/goldReport.mjs",
    "analytics:gold:delta": "node ./scripts/analytics/goldDeltaAggregator.mjs",
    "analytics:diagnostics": "node ./scripts/ci/diagnosticsDashboard.mjs",
    "analytics:breach:summary": "node ./scripts/ci/castleBreachSummary.mjs",
    "assets:integrity": "node ./scripts/assetIntegrity.mjs",
    "helm": "node ./scripts/helm.mjs",
    "smoke:tutorial": "node ./scripts/tutorialSmoke.mjs",
    "wave:sim": "node ./scripts/waveSim.mjs",
    "wave:benchmark": "node ./scripts/waveBenchmark.mjs",
    "task:build": "node ./scripts/build.mjs",
    "task:unit": "node ./scripts/unit.mjs",
    "task:integration": "node ./scripts/integration.mjs",
    "task:smoke": "node ./scripts/smoke.mjs",
    "task:seed": "node ./scripts/seed.mjs",
    "task:screenshots": "node ./scripts/hudScreenshots.mjs",
    "task:breach": "node ./scripts/castleBreachReplay.mjs",
    "task:e2e": "node ./scripts/e2e.mjs",
    "task:integrity": "node ./scripts/assetIntegrity.mjs",
    "task:lint": "npm run lint",
    "typecheck": "tsc --noEmit",
    "test:visual": "npx playwright test --config playwright.config.ts --project=visual",
    "test:visual:update": "npx playwright test --config playwright.config.ts --project=visual --update-snapshots",
    "ci:matrix": "node ./scripts/ci/run-matrix.mjs",
    "dashboard:static": "node ./scripts/generateStaticDashboard.mjs",
    "hooks:install": "node ./scripts/hooks/installHooks.mjs",
    "postinstall": "npm run hooks:install || true",
    "clean": "node -e \"try{require('fs').rmSync('dist',{recursive:true,force:true});}catch(e){if(e.code!== 'ENOENT'){console.warn('Clean warning:', e.message);}}\"",
    "test": "npm run clean && npm run lint && npm run format:check && npm run build && vitest run --coverage"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^4.0.6",
    "ajv": "^8.16.0",
    "c8": "^10.1.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "http-server": "^14.1.1",
    "linkedom": "^0.18.12",
    "prettier": "^3.3.3",
    "vitest": "^4.0.6",
    "yaml": "^2.8.1"
  }
}
