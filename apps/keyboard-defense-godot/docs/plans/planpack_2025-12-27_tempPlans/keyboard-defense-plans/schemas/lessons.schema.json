{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LessonsFile",
  "type": "object",
  "required": ["lessons"],
  "properties": {
    "lessons": {
      "type": "array",
      "minItems": 1,
      "items": {"$ref": "#/$defs/lesson"}
    }
  },
  "$defs": {
    "lesson": {
      "type": "object",
      "required": ["id", "order", "label", "words"],
      "properties": {
        "id": {"type": "string", "pattern": "^[a-z0-9-]+$"},
        "order": {"type": "integer", "minimum": 1},
        "label": {"type": "string"},
        "words": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"}
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
