{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://keyboard-defense.local/schemas/savegame.schema.json",
  "title": "Keyboard Defense Savegame",
  "type": "object",
  "required": [
    "saveVersion",
    "appVersion",
    "contentVersion",
    "profile",
    "activeRun"
  ],
  "properties": {
    "saveVersion": {
      "type": "integer",
      "minimum": 1
    },
    "appVersion": {
      "type": "string"
    },
    "contentVersion": {
      "type": "string"
    },
    "profile": {
      "type": "object",
      "required": [
        "settings",
        "unlocks",
        "typingProfile"
      ],
      "properties": {
        "settings": {
          "type": "object",
          "properties": {
            "layout": {
              "type": "string"
            },
            "locale": {
              "type": "string"
            },
            "timeMultiplier": {
              "type": "number",
              "minimum": 0.25,
              "maximum": 3.0
            },
            "practiceMode": {
              "type": "boolean"
            },
            "highContrast": {
              "type": "boolean"
            },
            "reducedMotion": {
              "type": "boolean"
            },
            "audio": {
              "type": "object",
              "properties": {
                "master": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "sfx": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "music": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": true
        },
        "unlocks": {
          "type": "object",
          "properties": {
            "upgrades": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "wordpacks": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "interventions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "currency": {
              "type": "integer",
              "minimum": 0
            }
          },
          "additionalProperties": true
        },
        "typingProfile": {
          "type": "object",
          "properties": {
            "wpmEstimate": {
              "type": "number",
              "minimum": 0
            },
            "accuracyEstimate": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "charErrors": {
              "type": "object",
              "additionalProperties": {
                "type": "integer",
                "minimum": 0
              }
            },
            "digraphErrors": {
              "type": "object",
              "additionalProperties": {
                "type": "integer",
                "minimum": 0
              }
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "activeRun": {
      "type": [
        "object",
        "null"
      ],
      "description": "Null if no run in progress.",
      "required": [],
      "properties": {
        "seed": {
          "type": "string"
        },
        "rngState": {
          "type": "string"
        },
        "day": {
          "type": "integer",
          "minimum": 0
        },
        "phase": {
          "type": "string",
          "enum": [
            "map",
            "battle",
            "results"
          ]
        },
        "resources": {
          "type": "object",
          "additionalProperties": {
            "type": "integer"
          }
        },
        "world": {
          "type": "object"
        },
        "entities": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
