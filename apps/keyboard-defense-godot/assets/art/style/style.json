{
  "name": "Keyboard Defense Style Guide",
  "version": "1.0.0",
  "tile_size": 16,
  "display_scale": 4,
  "outline_width": 1,
  "shading": {
    "highlight_direction": "top-left",
    "shadow_direction": "bottom-right",
    "highlight_intensity": 0.2,
    "shadow_intensity": 0.3
  },
  "sprite_sizes": {
    "icon": { "width": 16, "height": 16 },
    "tile": { "width": 16, "height": 16 },
    "unit": { "width": 16, "height": 16 },
    "building_small": { "width": 16, "height": 16 },
    "building_medium": { "width": 32, "height": 32 },
    "building_large": { "width": 48, "height": 48 }
  },
  "animation": {
    "frame_duration_ms": 100,
    "idle_frames": 2,
    "action_frames": 4,
    "fx_frames": 3
  },
  "ui": {
    "panel_corner_radius": 2,
    "panel_border_width": 2,
    "button_padding": 4,
    "nineslice_margin": 4
  }
}
