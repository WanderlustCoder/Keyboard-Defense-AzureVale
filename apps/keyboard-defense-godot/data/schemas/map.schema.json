{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MapFile",
  "type": "object",
  "required": ["nodes"],
  "properties": {
    "version": {"type": "integer", "minimum": 1},
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {"$ref": "#/$defs/node"}
    }
  },
  "$defs": {
    "node": {
      "type": "object",
      "required": ["id", "label", "lesson_id", "requires", "reward_gold"],
      "properties": {
        "id": {"type": "string", "pattern": "^[a-z0-9-]+$"},
        "label": {"type": "string"},
        "lesson_id": {"type": "string"},
        "requires": {
          "type": "array",
          "items": {"type": "string"}
        },
        "reward_gold": {"type": "integer", "minimum": 0},
        "drill_template": {"type": "string"},
        "drill_plan": {
          "type": "array",
          "items": {"$ref": "#/$defs/step"}
        },
        "drill_overrides": {"$ref": "#/$defs/overrides"}
      },
      "additionalProperties": false
    },
    "step": {
      "type": "object",
      "required": ["mode", "label"],
      "properties": {
        "mode": {"type": "string", "enum": ["lesson", "targets", "intermission"]},
        "label": {"type": "string"},
        "word_count": {"type": "integer", "minimum": 1},
        "shuffle": {"type": "boolean"},
        "hint": {"type": "string"},
        "targets": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"}
        },
        "duration": {"type": "number", "exclusiveMinimum": 0},
        "message": {"type": "string"},
        "case_sensitive": {"type": "boolean"},
        "allow_spaces": {"type": "boolean"},
        "allowed_chars": {"type": "string"}
      },
      "additionalProperties": false
    },
    "override_step": {
      "type": "object",
      "required": ["index", "data"],
      "properties": {
        "index": {"type": "integer", "minimum": 0},
        "data": {"type": "object"}
      },
      "additionalProperties": false
    },
    "replace_step": {
      "type": "object",
      "required": ["index", "step"],
      "properties": {
        "index": {"type": "integer", "minimum": 0},
        "step": {"$ref": "#/$defs/step"}
      },
      "additionalProperties": false
    },
    "overrides": {
      "type": "object",
      "properties": {
        "steps": {
          "type": "array",
          "items": {"$ref": "#/$defs/override_step"}
        },
        "replace": {
          "type": "array",
          "items": {"$ref": "#/$defs/replace_step"}
        },
        "remove": {
          "type": "array",
          "items": {"type": "integer", "minimum": 0}
        },
        "prepend": {
          "type": "array",
          "items": {"$ref": "#/$defs/step"}
        },
        "append": {
          "type": "array",
          "items": {"$ref": "#/$defs/step"}
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
